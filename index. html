               <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CineWave | Satyam's Movie Hub</title>
    <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-950 text-white">
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect } = React;

        function App() {
            const [movies, setMovies] = useState([]);
            const [searchTerm, setSearchTerm] = useState('');
            const [loading, setLoading] = useState(true);

            const API_KEY = "ace1a7739505f037593c8d197945d7d9";
            const API_URL = `https://api.themoviedb.org/3/movie/popular?api_key=${API_KEY}`;
            const SEARCH_URL = `https://api.themoviedb.org/3/search/movie?api_key=${API_KEY}&query=`;
            const IMG_PATH = "https://image.tmdb.org/t/p/w500";

            const fetchMovies = async (url) => {
                setLoading(true);
                try {
                    const res = await fetch(url);
                    const data = await res.json();
                    setMovies(data.results || []);
                } catch (err) {
                    console.error("Error fetching movies:", err);
                }
                setLoading(false);
            };

            useEffect(() => {
                fetchMovies(API_URL);
            }, []);

            const handleSearch = (e) => {
                e.preventDefault();
                if (searchTerm) fetchMovies(SEARCH_URL + searchTerm);
                else fetchMovies(API_URL);
            };

            return (
                <div className="min-h-screen">
                    <header className="p-6 bg-gray-900 sticky top-0 z-50 flex flex-col md:flex-row justify-between items-center gap-4 border-b border-gray-800">
                        <h1 className="text-3xl font-black text-red-600 tracking-tighter italic">CINE<span className="text-white">WAVE</span></h1>
                        <form onSubmit={handleSearch} className="relative w-full md:w-96">
                            <input 
                                type="text" 
                                placeholder="Search movies..." 
                                className="w-full bg-gray-800 border-2 border-transparent focus:border-red-600 rounded-full py-2 px-6 outline-none transition-all text-white"
                                value={searchTerm}
                                onChange={(e) => setSearchTerm(e.target.value)}
                            />
                        </form>
                    </header>

                    <main className="p-8">
                        {loading ? (
                            <div className="text-center py-20 text-xl font-bold">Loading...</div>
                        ) : (
                            <div className="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-6">
                                {movies.map(movie => (
                                    <div key={movie.id} className="bg-gray-900 rounded-lg overflow-hidden hover:scale-105 transition-transform">
                                        <img src={movie.poster_path ? IMG_PATH + movie.poster_path : "https://via.placeholder.com/500x750"} className="w-full h-auto" />
                                        <div className="p-3">
                                            <h3 className="font-bold truncate">{movie.title}</h3>
                                            <p className="text-yellow-400 text-sm italic">‚≠ê {movie.vote_average}</p>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        )}
                    </main>
                </div>
            );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>                                 <i class="fa-solid fa-star"></i>
                                                <span>{movie.vote_average}</span>
                                            </div>
                                            <p class="text-xs text-gray-300 line-clamp-3">{movie.overview}</p>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        )}
                    </main>

                    <footer class="p-10 text-center text-gray-600 border-t border-gray-900">
                        <p>Powered by TMDB API | Created by Satyam Kumar</p>
                    </footer>
                </div>
            );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
